<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="mideaac"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="ac">
		<label>Midea Air Conditioner</label>
		<description>Midea Air Conditioner with USB WIFI stick.</description>

		<channels>
			<channel id="power" typeId="power" />
			<channel id="target-temperature" typeId="target-temperature" />
			<channel id="operational-mode" typeId="operational-mode" />
			<channel id="fan-speed" typeId="fan-speed" />
			<channel id="swing-mode" typeId="swing-mode" />
			<channel id="eco-mode" typeId="eco-mode" />
			<channel id="turbo-mode" typeId="turbo-mode" />
			<channel id="indoor-temperature" typeId="indoor-temperature" />
			<channel id="outdoor-temperature" typeId="outdoor-temperature" />
			<channel id="sleep-function" typeId="sleep-function" />

			<channel id="imode-resume" typeId="imode-resume" />
			<channel id="timer-mode" typeId="timer-mode" />
			<channel id="on-timer" typeId="on-timer" />
			<channel id="off-timer" typeId="off-timer" />
			<channel id="appliance-error" typeId="appliance-error" />
			<channel id="cozy-sleep" typeId="cozy-sleep" />
			<channel id="save" typeId="save" />
			<channel id="low-frequency-fan" typeId="low-frequency-fan" />
			<channel id="super-fan" typeId="super-fan" />
			<channel id="feel-own" typeId="feel-own" />
			<channel id="child-sleep-mode" typeId="child-sleep-mode" />
			<channel id="exchange-air" typeId="exchange-air" />
			<channel id="dry-clean" typeId="dry-clean" />
			<channel id="aux-heat" typeId="aux-heat" />
			<channel id="clean-up" typeId="clean-up" />
			<channel id="temp-unit" typeId="temp-unit" />
			<channel id="catch-cold" typeId="catch-cold" />
			<channel id="night-light" typeId="night-light" />
			<channel id="peak-elec" typeId="peak-elec" />
			<channel id="natural-fan" typeId="natural-fan" />
			<channel id="humidity" typeId="humidity" />
			<channel id="screen-display" typeId="screen-display" />
		</channels>

		<representation-property>ipAddress</representation-property>

		<config-description>
			<parameter name="ipAddress" type="text" required="true">
				<context>network-address</context>
				<label>IP Address</label>
				<description>IP Address of the device.</description>
			</parameter>
			<parameter name="ipPort" type="text" required="true">
				<context>network-port</context>
				<label>IP Port</label>
				<description>IP port of the device.</description>
			</parameter>
			<parameter name="deviceId" type="text" required="true">
				<context>device-id</context>
				<label>Device ID</label>
				<description>ID of the device.</description>
			</parameter>
			<parameter name="pollingTime" type="decimal" required="true" min="10" unit="s">
				<context>polling-time</context>
				<label>Polling time</label>
				<description>Polling time in seconds to update status. Minimum time is 10 seconds.</description>
				<default>10</default>
			</parameter>
			<parameter name="promptTone" type="boolean" required="true">
				<context>prompt-tone</context>
				<label>Prompt tone</label>
				<description>After sending a command device will play "ding" tone when command is received and executed.</description>
				<default>false</default>
			</parameter>
		</config-description>

	</thing-type>

	<channel-type id="power">
		<item-type>Switch</item-type>
		<label>Power</label>
		<description>Turn the AC on and off.</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="target-temperature">
		<item-type>Number:Temperature</item-type>
		<label>Target temperature</label>
		<description>Target temperature.</description>
		<category>Temperature</category>
		<state readOnly="false" pattern="%d %unit%" />
	</channel-type>
	<channel-type id="operational-mode">
		<item-type>String</item-type>
		<label>Operational mode</label>
		<description>Operational mode: OFF (turns off), AUTO, COOL, DRY, HEAT.</description>
		<state>
			<options>
				<option value="OFF">OFF</option>
				<option value="AUTO">AUTO</option>
				<option value="COOL">COOL</option>
				<option value="DRY">DRY</option>
				<option value="HEAT">HEAT</option>
				<option value="FAN_ONLY">FAN ONLY</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="fan-speed">
		<item-type>String</item-type>
		<label>Fan speed</label>
		<description>Fan speed: OFF (turns off), SILENT, LOW, MEDIUM, HIGH, AUTO.</description>
		<state>
			<options>
				<option value="OFF">OFF</option>
				<option value="SILENT">SILENT</option>
				<option value="LOW">LOW</option>
				<option value="MEDIUM">MEDIUM</option>
				<option value="HIGH">HIGH</option>
				<option value="AUTO">AUTO</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="swing-mode">
		<item-type>String</item-type>
		<label>Swing mode</label>
		<description>Swing mode: OFF, VERTICAL, HORIZONTAL, BOTH.</description>
		<state>
			<options>
				<option value="OFF">OFF</option>
				<option value="VERTICAL">VERTICAL</option>
				<option value="HORIZONTAL">HORIZONTAL</option>
				<option value="BOTH">BOTH</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="eco-mode">
		<item-type>Switch</item-type>
		<label>Eco mode</label>
		<description>Eco mode.</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="turbo-mode">
		<item-type>Switch</item-type>
		<label>Turbo mode</label>
		<description>Turbo mode, "Boost" in Midea Air app, long press "+" on IR Remote Controller.</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="indoor-temperature">
		<item-type>Number:Temperature</item-type>
		<label>Indoor Temperature</label>
		<description>Indoor temperature measured in the room, where internal unit is installed.</description>
		<category>Temperature</category>
		<state readOnly="true" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="outdoor-temperature">
		<item-type>Number:Temperature</item-type>
		<label>Outdoor Temperature</label>
		<description>Outdoor temperature measured outside, where external unit is installed.</description>
		<category>Temperature</category>
		<state readOnly="true" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="sleep-function">
		<item-type>Switch</item-type>
		<label>Sleep function</label>
		<description>Sleep function ("Moon with a star" icon on IR Remote Controller).</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="screen-display">
		<item-type>Switch</item-type>
		<label>Screen display</label>
		<description>Turns on and off displaying white digits on a device. Can be set, but status is not returned.</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="imode-resume" advanced="true">
		<item-type>Switch</item-type>
		<label>Imode resume</label>
		<description>Imode resume.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="timer-mode" advanced="true">
		<item-type>Switch</item-type>
		<label>Timer mode</label>
		<description>Timer mode.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="appliance-error" advanced="true">
		<item-type>Switch</item-type>
		<label>Appliance error</label>
		<description>Appliance error.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="on-timer" advanced="true">
		<item-type>String</item-type>
		<label>ON Timer</label>
		<description>ON Timer (HH:MM) if set.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="off-timer" advanced="true">
		<item-type>String</item-type>
		<label>OFF Timer</label>
		<description>OFF Timer (HH:MM) if set.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="cozy-sleep" advanced="true">
		<item-type>Number</item-type>
		<label>Cozy sleep</label>
		<description>Cozy sleep.</description>
		<category>Number</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="save" advanced="true">
		<item-type>Switch</item-type>
		<label>Save</label>
		<description>Save.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="low-frequency-fan" advanced="true">
		<item-type>Switch</item-type>
		<label>Low frequency fan</label>
		<description>Low frequency fan.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="super-fan" advanced="true">
		<item-type>Switch</item-type>
		<label>Super fan</label>
		<description>Super fan.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="feel-own" advanced="true">
		<item-type>Switch</item-type>
		<label>Feel own</label>
		<description>Feel own.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="child-sleep-mode" advanced="true">
		<item-type>Switch</item-type>
		<label>Child sleep mode</label>
		<description>Child sleep mode.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="exchange-air" advanced="true">
		<item-type>Switch</item-type>
		<label>Exchange air</label>
		<description>Exchange air.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="dry-clean" advanced="true">
		<item-type>Switch</item-type>
		<label>Dry clean</label>
		<description>Dry clean.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="aux-heat" advanced="true">
		<item-type>Switch</item-type>
		<label>Aux heat</label>
		<description>Aux heat.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="clean-up" advanced="true">
		<item-type>Switch</item-type>
		<label>Clean up</label>
		<description>Clean up.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="temp-unit" advanced="true">
		<item-type>Switch</item-type>
		<label>Temperature unit</label>
		<description>If set Farenheit unit are be displayed, otherwise Celcius.</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="catch-cold" advanced="true">
		<item-type>Switch</item-type>
		<label>Catch cold</label>
		<description>Catch cold.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="night-light" advanced="true">
		<item-type>Switch</item-type>
		<label>Night light</label>
		<description>Night light.</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="peak-elec" advanced="true">
		<item-type>Switch</item-type>
		<label>Peak elec</label>
		<description>Peak elec.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="natural-fan" advanced="true">
		<item-type>Switch</item-type>
		<label>Natural fan</label>
		<description>Natural fan.</description>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="humidity" advanced="true">
		<item-type>Number</item-type>
		<label>Humidity</label>
		<description>Humidity measured in the room.</description>
		<category>Humidity</category>
		<state readOnly="true" pattern="%d%%" />
	</channel-type>
</thing:thing-descriptions>
